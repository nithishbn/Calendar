<MenuScreen>:
    NavigationLayout:
        pos_hint: {'top': 1}
        id: nav_layout
        # canvas:
        #     Rectangle:
        #         size: self.size
        #         pos: self.pos
        #     Color:
        #         rgba: 1, 1, 1, 0.2
        MDNavigationDrawer:
            pos_hint: {'top': 1}
            id: nav_drawer
            NavigationDrawerToolbar:
                #
                title: "Navigation"
            NavigationDrawerIconButton:
                # icon: 'home-outline'
                icon: 'home'
                text: "Home"
                on_release:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'MenuScreen'

            NavigationDrawerIconButton:
                icon: 'calendar-today'
                text: "Calendar"
                # badge_text: '99+'
                on_release:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'DateScreen'
            NavigationDrawerIconButton:
                # icon: 'checkbox-blank-circle'
                icon: 'image'
                text: "Gallery"
                on_release:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'ConstructionScreen'
            NavigationDrawerIconButton:
                # icon: 'checkbox-blank-circle'
                icon: 'contact-mail'
                text: "Contact"
                on_release:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'ContactScreen'
            # NavigationDrawerSubheader:
            #     text: "More"
            NavigationDrawerDivider
            # Spacer:
            NavigationDrawerIconButton:
                icon: 'credit-card'
                text: 'Donate'
                active_color_type: 'accent'
                on_release:
                    root.manager.transition = NoTransition()
                    webbrowser.open("https://lvtemple.org/new-donations/")

        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                size_hint_y: 0.2
                Toolbar:
                    pos_hint: {'top': 1}

                    id: toolbar
                    title: 'SVETA Temple'
                    md_bg_color: app.theme_cls.primary_color
                    background_palette: 'Primary'
                    background_hue: '500'
                    left_action_items: [['menu', lambda x: root.ids.nav_layout.toggle_nav_drawer()]]
            RelativeLayout:
                orientation: 'vertical'
                MDCard:
                    size_hint: 0.40, 0.85
                    pos_hint: {'top' :1,'x': 0.15}
                    elevation: 10
                    active_color_type: 'Custom'
                    active_color : [1, 0, 1, 1]
                    BoxLayout:
                        orientation:'vertical'
                        padding: dp(8)
                        spacing: 10
                        MDLabel:

                            text: "Today's View"
                            theme_text_color: 'Secondary'
                            font_style:"Display1"
                            size_hint_y: None
                            height: dp(36)
                            # halign: 'center'
                            # padding: 50

                        MDSeparator:
                            height: dp(1)

                            # padding: 50
                            spacing: -10
                        SmartTile:
                            mipmap: True
                            size_hint: 1, 0.7
                            source: './Temple-Front-View-V1.jpg'
                            # md_bg_color: 'Secondary'
                            # text: 'asdf'
                        MDLabel:
                            # pos_hint: {'top': 0.85}
                            size_hint_y: None
                            text: "There are quite a few cool things that are available today at the Temple"
                            theme_text_color: 'Primary'
                            font_style: 'Body2'
            ScrollLabel:
                id: scrolllabelthing
                size_hint_y: None
