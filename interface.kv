ScreenManager:
    id: sm
    LoginScreen:
        name: 'LoginScreen'
        id: login
        manager: sm
        # transition: NoTransition
    RegisterScreen:
        name: 'RegisterScreen'
        id: register
        manager: sm
        transition: NoTransition
    MenuScreen:
        name: 'MenuScreen'
        id: menu
        manager: sm
        transition: NoTransition
    DateScreen:
        name: 'DateScreen'
        id: date
        manager: sm
        transition: "NoTransition"
        screenlist: menu.screenlist
    TodayScreen:
        name: 'TodayScreen'
        id: today
        manager: sm
        date: date.date
        transition: NoTransition
        screenlist: menu.screenlist

    ConstructionScreen:
        name: 'ConstructionScreen'
        id: construction
        manager: sm
        transition: "NoTransition"
        screenlist: menu.screenlist
    ContactScreen:
        name: 'ContactScreen'
        id: contact
        manager: sm
        transition: "NoTransition"
        screenlist: menu.screenlist

<LoginScreen>:
    BoxLayout:
        BoxLayout:
            pos_hint: {'top': 1}
            orientation: 'vertical'
            height: self.minimum_height
            size_hint_y: None
            padding: 50
            spacing: 20
            MDTextField:
                multiline: False
                font_size: '50'
                write_tab: False
                id: username
                text: "Nithish"
                required: True
                pos_hint: {'top': 1}
                hint_text: "Email Address"
                helper_text: "Email Address or Password is incorrect"
                helper_text_mode: "on_error"
            MDTextField:
                multiline: False
                font_size: '50'
                password: True
                write_tab: False
                id: password
                on_text_validate: root.login()
                required: True
                text: "password"
                hint_text: "Password"
                helper_text: "Email Address or Password is incorrect"
                helper_text_mode: "on_error"
    MDFlatButton:
        size_hint: None, None
        pos_hint: {'center_y': 0.55, 'center_x': 0.5}
        text: "Don't have an account yet? Make one!"
        theme_text_color: 'Secondary'
        # size: 3* dp(48), dp(48)
        on_release:
            root.manager.transition = NoTransition()
            root.register()
            # root.manager.transition = NoTransition()
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.88, 0.15
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}
        # canvas.before:
        #     Rectangle:
        #         size: self.size
        #         pos: self.pos
        #     Color:
        #         rgba: 1, 1, 0, 1
        MDRaisedButton:
            # size_hint: 0.1, 0.65
            # size_hint: 0.10, None
            size_hint: None, None
            text: "Submit"
            # size: 3 * dp(48), dp(48)
            opposite_colors: True
            pos_hint: {'center_y': 1,'right': 1}
            on_release:
                # self.transition = NoTransition()
                root.manager.transition = NoTransition()
                root.login()
        # padding: 15
