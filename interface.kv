#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import webbrowser webbrowser
#: import Animation kivy.animation.Animation
ScreenManager:
    id: sm
    LoginScreen:
        name: 'LoginScreen'
        id: login
        manager: sm
        transition: NoTransition()
    RegisterScreen:
        name: 'RegisterScreen'
        id: register
        manager: sm
        transition: NoTransition()
    MenuScreen:
        name: 'MenuScreen'
        id: menu
        manager: sm
        transition: NoTransition()
    TodayScreen:
        name: 'TodayScreen'
        id: today
        manager: sm
        date: date.date
        transition: NoTransition
        screenlist: date.screenlist
    DateScreen:
        name: 'DateScreen'
        id: date
        manager: sm
        transition: "NoTransition"
        screenlist: menu.screenlist
    ConstructionScreen:
        name: 'ConstructionScreen'
        id: construction
        manager: sm
        transition: "NoTransition"
        screenlist: menu.screenlist
<LoginScreen>:
    BoxLayout:
        pos_hint: {'top': 1, 'center_x': 0.5}
        BoxLayout:
            size_hint_y: 0.5
            pos_hint: {'top': 1, 'center_x':0.5}
            orientation: 'vertical'
            Label:
                text: "Username"
                font_size: 50
            Label:
                text: "Password"
                font_size: 50
        BoxLayout:
            size_hint_y: 0.5
            pos_hint: {'top': 1, 'center_x':0.5}
            orientation: 'vertical'
            TextInput:
                size_hint: 1, 0.25
                multiline: False
            TextInput:
                size_hint: 1, 0.25
                multiline: False
                font_size: '50sp'
                valign: True
                password: True
    Label:
        size_hint: 1, 0.85
        pos_hint: {'bottom': 0.5}
        text: "Don't have an account? [ref=account][color=0000ff]Make one![/color][/ref]"
        markup: True
        on_ref_press: root.register()
    Button:
        size_hint: 0.65, 0.25
        text: "Submit"
        pos_hint: {'bottom':1, 'center_x': 0.5}
        on_press: root.manager.current = "MenuScreen"
<RegisterScreen>:
    Label:
        text: "asdf"
<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        Label:
            size_hint: 1, None
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            text: "Welcome Devotee"
            font_size: 50
        GridLayout:
            cols: 2
            rows: 3
            minimum_width: 0.2
            spacing: [0.5, 5.0]
            padding: 20
            Button:
                text:"Today's View"
                font_size: 45
                size_hint: 0.5, 1
                on_press: root.manager.current = "DateScreen"
            Button:
                text:"Donate"
                font_size: 45
                size_hint: 0.5, 1
                on_press: webbrowser.open("https://lvtemple.org/new-donations/")
            Button:
                text:"Gallery"
                font_size: 45
                size_hint: 0.5, 1
                on_press: root.manager.current = "ConstructionScreen"
            Button:
                text:"Calendar"
                font_size: 45
                size_hint: 0.5, 1
                on_press: root.manager.current = "ConstructionScreen"
        BoxLayout:
            padding: (100, 50)
            orientation: 'vertical'
            Button:
                text:"Contact SVETA"
                size_hint: 0.75, None
                font_size: 45
                pos_hint: {'top': 1, 'center_x': 0.5}
                on_press: root.manager.current = "ConstructionScreen"
        ScrollLabel:
            id: scrolllabelthing
            size_hint_y: None
<DateScreen>:
    on_leave:
        root.ids.datething.text = ""
    Label:
        text: "Enter Date for details"
        font_size: 35
        size_hint: 0.65, 0.25
        pos_hint: {'center_x': 0.5, 'top': 1}
    TextInput:
        text: root.figuretime()
        write_tab: False
        multiline: False
        id: datething
        font_size: 35
        size_hint: 0.55, 0.15

        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        on_text_validate: root.selectdate()

    Button:
        font_size: 35
        size_hint: 0.65, 0.25
        pos_hint: {'center_x': 0.5, 'bottom': 1}
        text: "Submit"
        on_press: root.selectdate()

