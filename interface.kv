Navigation:
    ScreenManager:
        id: sm
        MenuScreen:
            name: 'MenuScreen'
            id: menu
            manager: sm
            transition: NoTransition

        DateScreen:
            name: 'DateScreen'
            id: date
            manager: sm
            transition: "NoTransition"
            screenlist: menu.screenlist

        TodayScreen:
            name: 'TodayScreen'
            id: today
            manager: sm
            date: date.date
            transition: NoTransition
            screenlist: menu.screenlist
            count: date.count

        ConstructionScreen:
            name: 'ConstructionScreen'
            id: construction
            manager: sm
            transition: "NoTransition"
            screenlist: menu.screenlist

        ContactScreen:
            name: 'ContactScreen'
            id: contact
            manager: sm
            transition: "NoTransition"
            screenlist: menu.screenlist

        GalleryScreen:
            name: 'GalleryScreen'
            id: gallery
            manager: sm
            screenlist: menu.screenlist


<Navigation>:
    id: nav_layout
    pos_hint: {'top': 1}
    MDNavigationDrawer:
        pos_hint: {'top': 1}
        id: nav_drawer
        NavigationDrawerToolbar:
            #
            title: "Navigation"
        NavigationDrawerIconButton:
            # icon: 'home-outline'
            icon: 'home'
            text: "Home"
            on_release:
                app.root.ids.sm.transition = NoTransition()
                app.root.ids.sm.current = 'MenuScreen'

        NavigationDrawerIconButton:
            icon: 'calendar-today'
            text: "Calendar"
            # badge_text: '99+'
            on_release:
                app.root.ids.sm.transition = NoTransition()
                app.root.ids.sm.current= 'DateScreen'
        NavigationDrawerIconButton:
            # icon: 'checkbox-blank-circle'
            icon: 'image'
            text: "Gallery"
            on_release:
                app.root.ids.sm.transition = NoTransition()
                app.root.ids.sm.current = 'GalleryScreen'
        NavigationDrawerIconButton:
            # icon: 'checkbox-blank-circle'
            icon: 'contact-mail'
            text: "Contact"
            on_release:
                app.root.ids.sm.transition = NoTransition()
                app.root.ids.sm.current = 'ContactScreen'
        # NavigationDrawerSubheader:
        #     text: "More"
        NavigationDrawerDivider
        # Spacer:
        NavigationDrawerIconButton:
            icon: 'credit-card'
            text: 'Donate'
            active_color_type: 'accent'
            on_release: webbrowser.open("https://www.lvtemple.org/new-donations/", autoraise=True)


<MenuScreen>:

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.2
            AToolbar
        RelativeLayout:
            orientation: 'vertical'
            MDCard:
                size_hint: 0.8, 0.85
                pos_hint: {'top' :1,'center_x': 0.5}
                elevation: 10
                active_color_type: 'Custom'
                active_color : [1, 0, 1, 1]
                BoxLayout:
                    orientation:'vertical'
                    padding: dp(8)
                    spacing: 10
                    MDLabel:

                        text: "Today's View"
                        theme_text_color: 'Secondary'
                        font_style:"Display1"
                        size_hint_y: None
                        height: dp(36)
                        # halign: 'center'
                        # padding: 50
                    MDSeparator:
                        height: dp(1)
                        # padding: 50
                        spacing: -10
                    SmartTile:
                        mipmap: True
                        size_hint: 1, 0.7
                        source: './images/20141012_142533.jpg'
                        # md_bg_color: 'Secondary'
                        # text: 'asdf'
                    MDLabel:
                        # pos_hint: {'top': 0.85}
                        size_hint_y: None
                        text: "There are quite a few cool things that are available today at the Temple"
                        theme_text_color: 'Primary'
                        font_style: 'Body2'
        ScrollLabel:
            id: scrolllabelthing
            size_hint_y: None
<GalleryScreen>:
    BoxLayout:
        orientation: 'vertical'

        # size_hint_y: None
        # spacing: 40
        pos_hint: {'top': 1}
        BoxLayout:
            size_hint_y:0.2
            AToolbar
        RelativeLayout:
            pos_hint: {'top': 0.95}
            Image:
                source: root.imagefile
                pos_hint: {'center_x': 0.5, 'top': 1.25}
            GridLayout:
                rows: 1
                cols: 2
                spacing: 10
                pos_hint: {'center_x': 0.50, 'top': 0.5}
                size_hint: 0.25, 0.1
                MDRaisedButton:
                    text: "Previous"
                    size_hint: None, None
                    on_release:
                        root.previous_image()
                MDRaisedButton:
                    text: "Next"
                    on_release:
                        root.next_image()
            MDLabel:
                text: str(root.count + 1) + "/" + str(root.lengthoflist + 1)
                pos_hint: {'x': 0.1}


<DateScreen>:
    BoxLayout:
        orientation: 'vertical'
        # spacing: 15
        pos_hint: {'top': 1}
        BoxLayout:
            size_hint_y: 0.2
            AToolbar
        RelativeLayout:
            MDCard:
                size_hint: 0.90, 0.85
                pos_hint: {'center_x':0.5,'top':1}
                BoxLayout:
                    MDLabel:
                        text: "hello there!"

            MDRaisedButton:
                pos_hint: {'center_x':0.5, 'center_y':0.75}
                text: "Show Calendar"
                on_press: root.show_date_picker()

