                    multiline: False
                    pos_hint: {'top': 1}
                    helper_text: "username is great"
                    helper_text_mode: "on_focus"
                    # color_mode: 'accent'
                MDTextField:
                    multiline: False
                    pos_hint:{'center_y': 0.5}
                    helper_text: "This phone number will be sent a text for authorization."
                    helper_text_mode: "on_focus"
                MDTextField:
                    multiline: False
