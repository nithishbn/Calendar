#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import webbrowser webbrowser
#: import Animation kivy.animation.Animation
ScreenManager:
    id: sm
    MenuScreen:
        name: 'MenuScreen'
        id: menu
        manager: sm
        transition: "NoTransition"
    TodayScreen:
        name: 'TodayScreen'
        id: today
        manager: sm
        date: date.date
        transition: "NoTransition"
    DateScreen:
        name: 'DateScreen'
        id: date
        manager: sm
        transition: "NoTransition"
    ConstructionScreen:
        name: 'ConstructionScreen'
        id: construction
        manager: sm
        transition: "NoTransition"
<MenuScreen>:
    on_enter:
        root.ids.scrolllabelthing.update_self()
    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        Label:
            size_hint: 1, None
            pos_hint:{'center_x': 0.5, 'center_y': 0.5}
            text: "Welcome Devotee"
            font_size: 50
        GridLayout:
            cols: 2
            rows: 3
            minimum_width: 0.2
            spacing: [0.5, 5.0]
            padding: 20
            Button:
                text:"Today's View"
                font_size: 45
                size_hint: 0.5, 1
                on_press: root.manager.current = "DateScreen"
            Button:
                text:"Donate"
                font_size: 45
                size_hint: 0.5, 1
                on_press: webbrowser.open("https://lvtemple.org/new-donations/")
            Button:
                text:"Gallery"
                font_size: 45
                size_hint: 0.5, 1
                on_press: root.manager.current = "ConstructionScreen"
            Button:
                text:"Calendar"
                font_size: 45
                size_hint: 0.5, 1
                on_press: root.manager.current = "ConstructionScreen"
        BoxLayout:
            padding: (100, 50)
            orientation: 'vertical'
            Button:
                text:"Contact SVETA"
                size_hint: 0.75, None
                font_size: 45
                pos_hint: {'top': 1, 'center_x': 0.5}
                on_press: root.manager.current = "ConstructionScreen"
        ScrollLabel:
            id: scrolllabelthing
            size_hint_y: None
            # scroll_y: -1









<DateScreen>:
    on_pre_enter:
        root.ids.datething.text = ""
    Label:
        text: "Enter Date for details"
        font_size: 35
        size_hint: 0.65, 0.25
        pos_hint: {'center_x': 0.5, 'top': 1}
    TextInput:
        text: "asdfasdfasdfasdf"
        write_tab: False
        multiline: False
        id: datething
        font_size: 35
        size_hint: 0.55, 0.15

        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        on_text_validate: root.selectdate()

    Button:
        font_size: 35
        size_hint: 0.65, 0.25
        pos_hint: {'center_x': 0.5, 'bottom': 1}
        text: "Submit"
        on_press: root.selectdate()

<TodayScreen>:
    on_pre_enter:
        root.search()
    BoxLayout:
        orientation: 'vertical'
        # padding: 0, -30

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.25
            Label:
                text: 'Details'
                font_size: 45
                size_hint: None, 0.05
                pos_hint: {'center_x':0.5, 'top': 1}
                markup: True
                underline: True
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.samva
                size_hint: 0.5, 0.25
                pos_hint:{'x':0.25,'top':0.15}
                font_size: 25
            Label:
                text: root.avanam
                size_hint: 0.5, 0.25
                pos_hint:{'x':0.25,'top':0.15}
                font_size: 25
            Label:
                text: root.rithu
                size_hint: 0.5, 0.25
                pos_hint:{'x':0.25,'top':0.15}
                font_size: 25
            Label:
                text: root.maasae
                size_hint: 0.5, 0.25
                pos_hint:{'x':0.25,'top':0.15}
                font_size: 25
            Label:
                text: root.pakshae
                size_hint: 0.5, 0.25
                pos_hint:{'x':0.25,'top':0.15}
                font_size: 25
            Label:
                text: root.thithi
                size_hint: 0.5, 0.25
                pos_hint:{'x':0.25,'top':0.15}
                font_size: 25
        Button:
            size_hint: 0.5, .25
            pos_hint: {'x':.25, 'y': 0.05}
            text: 'Go Back to Menu'
            font_size: 35
            on_press: root.manager.current = 'DateScreen'
<ConstructionScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint: 1, 0.25
                pos_hint: {'top': 1, 'center_x': 0.5}
                text: "Oops! This page is under construction!"
                font_size: 35
            Label:
                size_hint: 1, 0.25
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                text: "Check back again later!"
                font_size: 35
        BoxLayout:
            padding: (100, 0)
            Button:
                size_hint: 1, 0.25
                pos_hint: {'bottom': 1, 'center_x': 0.5}
                text: "Go back!"
                on_press: root.manager.current = "MenuScreen"
                font_size: 35
<Spacer@Widget>:
    size_hint_x: None
    width: 800

<ScrollLabel>:
    GridLayout:
        rows:1
        size_hint_x: None

        width: self.minimum_width
        Spacer:
        Label:
            size_hint_x: None
            text: "Hello there! Yesterday was Ugadi! Happy New Year!"
            width: self.texture_size[0]
        Spacer:
