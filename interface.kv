                    text: "Email Address"
                    font_style: 'Title'
                    theme_text_color: 'Primary'
                    halign: 'center'
                MDLabel:
                    text: "Phone Number"
                    font_style: 'Title'
                    theme_text_color: 'Primary'
                    halign: 'center'
                MDLabel:
                    text: "Password"
                    font_style: 'Title'
                    theme_text_color: 'Primary'
                    halign: 'center'
            BoxLayout:
                orientation: 'vertical'
                pos_hint: {'bottom': 1}
                # size_hint: 1, None
                # spacing: 90
