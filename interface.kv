ScreenManager:
    id: sm
    LoginScreen:
        name: 'LoginScreen'
        id: login
        manager: sm
        # transition: NoTransition
    RegisterScreen:
        name: 'RegisterScreen'
        id: register
        manager: sm
        transition: NoTransition
    MenuScreen:
        name: 'MenuScreen'
        id: menu
        manager: sm
        transition: NoTransition
    DateScreen:
        name: 'DateScreen'
        id: date
        manager: sm
        transition: "NoTransition"
        screenlist: menu.screenlist
    TodayScreen:
        name: 'TodayScreen'
        id: today
        manager: sm
        date: date.date
        transition: NoTransition
        screenlist: menu.screenlist

    ConstructionScreen:
        name: 'ConstructionScreen'
        id: construction
        manager: sm
        transition: "NoTransition"
        screenlist: menu.screenlist
<LoginScreen>:
    BoxLayout:
        BoxLayout:
            size_hint_y: 0.5
            pos_hint: {'top': 1, 'center_x':0.5}
            orientation: 'vertical'
            MDLabel:
                font_style: 'Display2'
                theme_text_color: 'Secondary'
                # font_size: '35dp'
                text: "Email"
                halign: 'center'
            MDLabel:
                font_style: 'Display2'
                theme_text_color: 'Secondary'
                text: "Password"
                # font_size: '35dp'
                halign: 'center'
        BoxLayout:
            pos_hint: {'top': 0.93}
            # canvas.before:
            #     Rectangle:
            #         size: self.size
            #         pos: self.pos
            #     Color:
            #         rgba: 1, 1, 1, 0.2
            orientation: 'vertical'
            height: self.minimum_height
            size_hint_y: None
            padding: dp(5)
            spacing: 20
            MDTextField:
                multiline: False
                # font_style: 'Display4'
                font_size: '50'
                write_tab: False
                id: username
                required: True
                # size_hint_y: None
                pos_hint: {'top': 1}
                hint_text: "Email Address"
                helper_text: "Email Address or Password is incorrect"
                helper_text_mode: "on_error"
            MDTextField:
                # id: text_field_error
                multiline: False
                font_size: '50'
                # valign: True
                password: True
                write_tab: False
                id: password
                on_text_validate: root.login()
                required: True
                hint_text: "Password"
                helper_text: "Email Address or Password is incorrect"
                helper_text_mode: "on_error"
    MDFlatButton:
        size_hint: None, None
        pos_hint: {'center_y': 0.45, 'center_x': 0.5}
        text: "Don't have an account yet? Make one!"
        theme_text_color: 'Secondary'
        # size: 3* dp(48), dp(48)
        on_release:
            root.register()
            # root.manager.transition = NoTransition()
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.88, 0.15
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}
        # canvas.before:
        #     Rectangle:
        #         size: self.size
        #         pos: self.pos
        #     Color:
        #         rgba: 1, 1, 0, 1
        MDRaisedButton:
            # size_hint: 0.1, 0.65
            # size_hint: 0.10, None
            size_hint: None, None
            text: "Submit"
            # size: 3 * dp(48), dp(48)
            opposite_colors: True
            pos_hint: {'center_y': 1,'right': 1}
            on_release:
                root.login()
        # padding: 15
<RegisterScreen>:
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            theme_text_color: 'Primary'
            text: 'Register'
            pos_hint: {'top': 1, 'center_x': 0.5}
            halign: 'center'
            font_style: 'Display3'
            size_hint: 1, 0.2


        BoxLayout:
            pos_hint: {'center_y': 0.5}
            size_hint: 1, 0.7
